# Twealth Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Required
# ===================

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/twealth

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# ===================
# AI - Free Tier (Gemini)
# ===================

# Google Gemini API Key (FREE - 2M tokens/day)
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key

# ===================
# AI - Pro Tier (Claude)
# ===================

# Anthropic Claude API Key (~$1.35/100 queries)
# Get from: https://console.anthropic.com/settings/keys
AI_INTEGRATIONS_ANTHROPIC_API_KEY=your_anthropic_api_key
AI_INTEGRATIONS_ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# ===================
# Authentication (Optional - at least one recommended)
# ===================

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth (optional)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Apple Sign In (optional)
APPLE_SERVICE_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# ===================
# Payments (Optional)
# ===================

# Stripe
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=

# ===================
# Legacy AI (Deprecated - not required)
# ===================

# Groq Scout (being replaced by Gemini)
# GROQ_API_KEY=

# OpenAI GPT-5 (optional for math-heavy queries)
# AI_INTEGRATIONS_OPENAI_API_KEY=
# AI_INTEGRATIONS_OPENAI_BASE_URL=
